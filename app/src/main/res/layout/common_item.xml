<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
   <TextView
       android:id="@+id/common_title"
       android:text="高血压的人应该注意什么"
       android:textSize="18sp"
       android:layout_margin="5dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/common_date"
        android:text="2017-06-08"
        android:textColor="#aba6a6"
        android:layout_marginLeft="5dp"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/common_body"
        android:layout_margin="5dp"
        android:text="多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多多"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:background="#d2c7c7"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="阅读全文"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ccoo_icon_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>