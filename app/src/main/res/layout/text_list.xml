<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/text_title"
        ></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/list_info"
            layout="@layout/text_list_item">
        </include>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="13px"
        android:background="@color/colorLineV"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/colorGraya"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/free_ask_dc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor_online"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费问医生"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTexts" />
        </LinearLayout>
<ImageView
    android:layout_width="1dp"
    android:layout_height="90dp"
    android:background="@color/colorLineV"/>
        <LinearLayout
            android:id="@+id/good_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/image2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doctor_phone"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="健康顾问"
                android:textSize="16dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorTexts" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15px"
        android:background="@color/colorLineV"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:background="@color/colorGraya">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:text="热门医生"
            android:textSize="18sp"
            android:textColor="@color/colorName"/>

        <TextView
            android:id="@+id/huanyihuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="换一换"
            android:textColor="@color/colorBack"
            android:layout_marginRight="30dp"
            android:textSize="18sp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/not_net"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/aliceblue"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="网络慢 请稍等~~~" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hot_doctor_lin"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/find_selector_layout"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_line1"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:src="@drawable/doctor_phone"/>
            <TextView
                android:id="@+id/text_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="美女秀场"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/find_selector_layout"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_line2"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:src="@drawable/doctor_phone"/>
            <TextView
                android:id="@+id/text_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门活动"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/find_selector_layout"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_line3"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:src="@drawable/doctor_phone"/>
            <TextView
                android:id="@+id/text_line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="城市币抽奖"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/find_selector_layout"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/image_line4"
                android:layout_width="65dp"
                android:layout_height="75dp"
                android:src="@drawable/doctor_phone"/>
            <TextView
                android:id="@+id/text_line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同城话题"/>

        </LinearLayout>

</LinearLayout>
</LinearLayout>