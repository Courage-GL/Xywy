<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fbf8f4">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green1">
        <ImageView
            android:layout_centerVertical="true"
            android:src="@mipmap/back_img"
            android:id="@+id/update_back"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/white"
            android:textSize="20dp"
            android:gravity="center"
            android:text="数据记录"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <TextView
        android:textColor="@color/blank1"
        android:text="日期："
        android:textSize="20dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent" />
        <TextView
            android:textSize="20dp"
            android:id="@+id/update_Data"
            android:textColor="@color/blank1"
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <TextView
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <LinearLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/blank1"
            android:text="时间："
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20dp"
            android:id="@+id/update_Time"
            android:textColor="@color/blank1"
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <TextView
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <LinearLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/blank1"
            android:text="设备名称："
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:textSize="20dp"
            android:id="@+id/update_SheBei"
            android:textColor="@color/blank1"
            android:background="@null"
            android:hint="(以供用户自己区分设备)"
            android:gravity="center"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <TextView
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <LinearLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/blank1"
            android:text="高压："
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:numeric="integer"
            android:textSize="20dp"
            android:id="@+id/update_GaoYa"
            android:textColor="@color/blank1"
            android:background="@null"
            android:hint="30-200"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView

            android:textSize="20dp"
            android:textColor="@color/blank1"
            android:gravity="center"
            android:text="mmHg"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <TextView
        android:textColor="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="3dp" />
    <LinearLayout

        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textSize="20dp"
            android:textColor="@color/blank1"
            android:text="低压："
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <EditText
            android:numeric="integer"
            android:textSize="20dp"
            android:id="@+id/update_DiYa"
            android:textColor="@color/blank1"
            android:background="@null"
            android:hint="30-200"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:textSize="20dp"
            android:textColor="@color/blank1"
            android:gravity="center"
            android:text="mmHg"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <Button
        android:id="@+id/update_update"
        android:textColor="@color/white"
        android:background="@color/green1"
        android:text="上传"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>
