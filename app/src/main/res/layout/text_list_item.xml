<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGraya"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/re">
        <LinearLayout
            android:id="@+id/choose_city"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/find_selector_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_loc_meaage"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="省份"
                android:layout_marginLeft="14dp"
                android:textColor="@color/colorBlack"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true" />
        </LinearLayout>


        <ImageView
            android:id="@+id/mine_location"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/selector_tit"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/aliceblue"/>

    <RelativeLayout
        android:id="@+id/re_hospital"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clickable="true"
        android:background="@drawable/find_selector_layout"
        android:gravity="center_vertical">
    <TextView
        android:id="@+id/textView_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="医院职称"
        android:layout_marginLeft="14dp"
        android:textColor="@color/colorBlack"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_right"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/aliceblue"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clickable="true"
        android:background="@drawable/find_selector_layout"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/textView_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="医院等级"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorBlack"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/aliceblue"/>
    <RelativeLayout
        android:id="@+id/search_edit_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clickable="true"
        android:background="@drawable/find_selector_layout"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/search_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="关键字/专家姓名/医院名称/疾病"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorText"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/aliceblue"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center_vertical">
            <CheckBox
                android:button="@null"
                android:id="@+id/checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:clickable="true"
                android:background="@drawable/selector_checkbox"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="免费加号"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/checkbox"
                android:layout_marginLeft="14dp"
                android:textColor="@color/colorBlack"/>




            <LinearLayout
                android:id="@+id/check_dc"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/button_check_item"
                android:layout_marginRight="13dp"
                android:gravity="center"
                android:clickable="true"
                android:layout_alignParentRight="true" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查询专家"
                    android:textColor="@color/colorBlack"
                    android:textSize="18dp"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
