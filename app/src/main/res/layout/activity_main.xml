<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abner.xywy_net.controller.MainActivity"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/MainActivity_FrameLayout"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>

       <RadioGroup
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/MainActivity_Button1"
                android:button="@null"
                android:checked="true"
                android:text="医生在线"
                 android:textColor="@drawable/ziti_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/yishnegzaixian_selector"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <RadioButton
                android:id="@+id/MainActivity_Button2"
                android:button="@null"
                android:text="血压管理"
                android:textColor="@drawable/ziti_selector"
                android:gravity="center"
                android:layout_weight="1"
                android:drawableTop="@drawable/xueyaguanli_selector"
                android:layout_width="0dp"
               android:layout_height="match_parent" />

           <RadioButton
               android:id="@+id/MainActivity_Button3"
               android:button="@null"
               android:text="个人中心"
                android:textColor="@drawable/ziti_selector"
               android:gravity="center"
               android:layout_weight="1"
                android:drawableTop="@drawable/gerenzhongxin_selector"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
       </RadioGroup>

    </LinearLayout>