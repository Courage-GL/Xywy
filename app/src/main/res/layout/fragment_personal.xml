<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e7e5e5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="100dp">
       <include
           android:id="@+id/person_begin"
           layout="@layout/activity_beginlogin"/>
       <include
           android:id="@+id/person_after"
           android:visibility="gone"
           layout="@layout/activity_afterlogin"/>
   </LinearLayout>
    <RelativeLayout
        android:id="@+id/personal_jiahao"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/gerenzhongxin_03"
            android:id="@+id/jiahao"
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="我的加号"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/jiahao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ccoo_icon_to"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />

    <RelativeLayout
        android:id="@+id/personal_like"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/person_xingxing"
            android:id="@+id/shoucang"
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="我的收藏"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ccoo_icon_to"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:background="#e7e5e5"
        android:layout_width="match_parent"
        android:layout_height="20dp" />


    <RelativeLayout
        android:id="@+id/personal_detail"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/persional_normal"
            android:id="@+id/geren"
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="个人资料"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/geren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ccoo_icon_to"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />

    <RelativeLayout
        android:id="@+id/personal_messgae"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/person_message"
            android:id="@+id/message"
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="消息"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ccoo_icon_to"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:background="#aaaaaa"
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />



    <RelativeLayout
        android:id="@+id/personal_set"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:src="@drawable/person_shezhi"
            android:id="@+id/set"
            android:layout_margin="2dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
        <TextView
            android:text="设置"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:textSize="18sp"
            android:layout_toRightOf="@id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/ccoo_icon_to"
            android:layout_alignParentRight="true"
            android:layout_width="20dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_height="20dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp" />



</LinearLayout>